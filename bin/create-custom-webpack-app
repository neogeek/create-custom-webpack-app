#!/bin/bash

REDON=$(tput setaf 1)
GREENON=$(tput setaf 2)
COLOROFF=$(tput sgr0)

CWD=$(pwd)

DIRECTORY="${1}"

if [ -z "${DIRECTORY}" ]; then

    printf "${REDON}Error: No directory specified.${COLOROFF}\n\n"

    printf "Usage:\n\n"

    printf "  $ create-custom-webpack-app <directory>\n"

    exit 1;

fi

mkdir -p "${DIRECTORY}"

if [ $(ls -A "${DIRECTORY}") ]; then

    printf "${REDON}Error: Directory is not empty.${COLOROFF}\n"

    exit 1;

fi

(

    cd "${DIRECTORY}"

    printf "Creating a React application in ${GREENON}${DIRECTORY}${COLOROFF}\n\n"

    rsync -avq "${CWD}/template/" "${DIRECTORY}"

    npm install

    git init

    git add .

    git commit -m "Initial commit." &> /dev/null

    printf "\nSuccess! ðŸŽ‰ðŸŽ‰ðŸŽ‰\n\n"

    printf "A React application was created in ${GREENON}${DIRECTORY}${COLOROFF}\n\n"

    printf "Start by typing:\n\n"

    printf "  $ cd ${GREENON}${DIRECTORY}${COLOROFF}\n"
    printf "  $ npm start\n"

)
